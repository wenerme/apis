{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "src",
    "declarationDir": "lib/typings"
  },
  "exclude": ["node_modules", "**/__tests__/*"],
  "include": ["src"]
}
