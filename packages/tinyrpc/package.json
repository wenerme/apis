{
  "name": "@wener/tinyrpc",
  "version": "1.0.0-alpha.1",
  "description": "Tiny RPC for ES6 Proxy",
  "keywords": [
    "rpc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wener/apis.git"
  },
  "license": "MIT",
  "author": "wener",
  "main": "lib/tinyrpc.umd.js",
  "module": "lib/tinyrpc.es5.js",
  "typings": "lib/tinyrpc.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "doc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "prepare": "yarn build",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "jest": "^25.1.0",
    "lodash.camelcase": "^4.3.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "isomorphic-unfetch": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
