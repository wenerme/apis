{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "**/__tests__/*"],
  "include": ["src/**/*.ts"]
}
