{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "pretty": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "include": [
    "src"
  ]
}
