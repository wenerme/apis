{
  "name": "@wener-apis/apis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "yarn workspaces run run:prettier",
    "test": "yarn --cwd packages/server test",
    "dev": "yarn --cwd packages/server dev",
    "build": "yarn --cwd packages/server build",
    "start": "yarn --cwd packages/server start"
  },
  "resolutions": {
    "prettier": "^2.0.0",
    "svgo": "^1.3.2"
  },
  "engines": {
    "node": "12"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.run:prettier": "prettier --write"
  }
}
