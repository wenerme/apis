{
  "name": "@wener/apis",
  "private": true,
  "repository": "https://github.com/wenerme/apis",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:server",
    "build:doc:prepare": "rm -rf packages/server/public/docs/@wener && mkdir -p packages/server/public/docs/@wener",
    "build:public": "yarn build:utils  && run-p build:ui build:tinyrpc &&yarn build:doc:prepare && run-p --silent build:public:**",
    "build:public:tinyrpc": "cp -r packages/tinyrpc/docs packages/server/public/docs/@wener/tinyrpc",
    "build:public:ui": "yarn --cwd packages/ui run storybook:build && cp -r packages/ui/storybook packages/server/public/storybook",
    "build:public:utils": "cp -r packages/utils/docs packages/server/public/docs/@wener/utils",
    "build:rjsf-antd": "yarn --cwd packages/rjsf-antd-theme run build",
    "build:server": "yarn --cwd packages/server run build",
    "build:tinyrpc": "yarn --cwd packages/tinyrpc run build",
    "build:ui": "yarn --cwd packages/ui run build",
    "build:utils": "yarn --cwd packages/utils run build",
    "dev": "yarn --cwd packages/server run dev",
    "format": "yarn prettier --write packages/*/src packages/*/stories",
    "lint": "yarn eslint --fix --ext .ts,.tsx packages/*/src",
    "pub": "yarn pub:build && yarn lerna publish prerelease --registry https://registry.npmjs.org/  --no-push",
    "pub:build": "yarn build:utils && run-p build:tinyrpc build:ui build:rjsf-antd && yarn --cwd packages/server run tsc --noEmit",
    "sort": "yarn dlx sort-package-json package.json packages/*/package.json packages/*/tsconfig*.json && prettier --write package.json packages/*/package.json packages/*/tsconfig*.json",
    "start": "yarn --cwd packages/server run start",
    "start:server": "yarn --cwd packages/server run start",
    "test": "yarn --cwd packages/server run test",
    "typesync": "yarn workspaces foreach dlx typesync"
  },
  "resolutions": {
    "babel-jest": "*",
    "jest": "*",
    "prettier": "^2",
    "styled-components": ">= 5",
    "svgo": "^1.3.2",
    "tinacms": "*"
  },
  "devDependencies": {
    "@types/eslint": "^7",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^3",
    "@typescript-eslint/parser": "^3",
    "eslint": "^7",
    "eslint-config-prettier": "^6",
    "eslint-plugin-jest": "^23",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "husky": "^4",
    "lerna": "^3.20.2",
    "lint-staged": "^10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2"
  },
  "engines": {
    "node": "12"
  }
}
