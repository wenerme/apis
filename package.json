{
  "name": "@wener/apis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn --cwd packages/server build",
    "dev": "yarn --cwd packages/server dev",
    "format": "yarn workspaces run run:prettier",
    "sort": "npx sort-package-json",
    "start": "yarn --cwd packages/server start",
    "pub": "yarn lerna publish prerelease --registry https://registry.npmjs.org/  --no-push",
    "test": "yarn --cwd packages/server test"
  },
  "resolutions": {
    "prettier": "^2.0.0",
    "svgo": "^1.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.2"
  },
  "engines": {
    "node": "12"
  }
}
