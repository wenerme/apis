{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "types/*": [
        "types/*"
      ],
      "libs/*": [
        "libs/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "apis/*": [
        "apis/*"
      ],
      "db/*": [
        "db/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
